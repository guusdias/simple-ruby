  <%= content_tag :div, mensagem, class: nome %>
  </div>
<%end%>
<table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td>Nome</td>
        <td>Descrição</td>
        <td>Departamento</td>
        <td>Preço</td>
        <td>Quantidade</td>
