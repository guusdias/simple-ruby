  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td>Nome</td>
        <td>Descrição</td>
        <td>Preço</td>
        <td>Quantidade</td>
        <td colspan="1"></td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product|%>
      <tr>
        <td><%= product.name%></td>
        <td><%= product.description%></td>
        <td><%= product.preco%></td>
        <td><%= product.quantity%></td>
        <td><%= button_to "Remover", product, method: :delete, class: "btn btn-danger", data: {confirm: "Tem certeza que deseja remover o produto #{product.name} ?"}%>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
  <div class="alert alert-success" role="alert">
    <h3 class="alert-heading">Produtos com desconto</h3>
  </div>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td>Nome</td>
        <td>Descrição</td>
        <td>Preço</td>
        <td>Quantidade</td>
      </tr>
    </thead>
    <tbody>
      <% @products_with_discount.each do |product|%>
      <tr>
        <td><%= product.name%></td>
        <td><%= product.description%></td>
        <td><%= product.preco%></td>
        <td><%= product.quantity%></td>
      </tr>
      <%end%>
    </tbody>
  </table>
